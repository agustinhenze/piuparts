. @sharedir@/piuparts/lib/read_config.sh

get_config_value MASTER global master-directory
get_config_value SECTIONS global sections
get_config_value PYTHONPATH global PYTHONPATH ''
get_config_value DEBEMAIL global bts-from ''


@sharedir@/piuparts/piuparts-analyze 2>&1
exit 0

export PYTHONPATH

OLDPWD=$(pwd)
OUTPUT=$(mktemp)
for SECTION in $SECTIONS ; do
	test -d $MASTER/$SECTION || continue
		cd $MASTER/$SECTION
		timeout 60m @sharedir@/piuparts/piuparts-analyze 2>&1 > $OUTPUT
		if [ $? = 124 ]; then
			echo >> $OUTPUT
			echo "Killed after timeout" >> $OUTPUT
		fi

		if [ -s $OUTPUT ]; then
			echo $SECTION
			cat $OUTPUT
			echo
		fi
		cd "$OLDPWD"
done
rm $OUTPUT
